@model CountryDemo.ViewModel.CreateLoansViewModel

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fonts & CSS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/fonts/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css">
    <link href="~/fonts/fontawesome.css" rel="stylesheet" />
    <link href="~/fonts/fontawesome.min.css" rel="stylesheet" />
    

    <title>Add new loan</title>
</head>

<body>
    <!-- header top -->
    <div class="header-top">
        <div class="headnav-top">
            <!-- menu bar -->
            <div class="navlogo">
                <div class="menubar">
                    <i class="fas fa-bars">
                        
                    </i>
                </div>
                <!-- Logo -->
                <a href="#">
                    <img class="img-fluid" src="~/images/simply-docs-logo.png"
                         alt="logo">
                </a>
            </div>
            
            <div class="navbar-right">
                <div class="navbar-right-content">
                    <div class="navright">
                        <ul class="nav-right">
                            <li class="dropdown user-profile-header">
                                <div class="userimgbox" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
                                     aria-expanded="false">
                                    <img src="images/avatar.png" class="userimg"
                                         alt="User-Profile-Image">
                                    <span class="name">
                                        Admin
                                    </span>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="dropdown-menu dropdown-menu-right profile-notification"
                                     aria-labelledby="navbarDropdown">
                                    <button class="dropdown-item" type="submit">
                                        <i class="fas fa-sign-out-alt"></i> Log Out
                                    </button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*wraps content*@

    <div class="main-container">
        <div class="d-flex">

            <!-- sidebar menu -->
            <div class="sidemenu-wrap">
                <div class="slimScrollDiv custmscroll">
                    <div id="accordian">
                        <ul class="nav mainMenu" id="my-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>


            <div class="maincontent-wrap">
                <div class="maincontent-inner">
                    <div class="page-header">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="page-header-title">
                                        <i class="fas fa-layer-group"></i>
                                        <div class="d-inline">
                                            <h5 class="pagetitle">Add New loan</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*need responsive here!*@

                    <div class="main-body">
                        <div class="page-wrap custForm">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="formfiled">

                                                    <form method="post">
                                                        <div class="form-group">
                                                            <label>User Name</label>
                                                            <input type="text" class="form-control" asp-for="Name"  />
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Loan Tenure (in Months)</label>
                                                            <input type="text" class="form-control" asp-for="Duration"  />
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Loan Amount</label>
                                                            <input type="text" class="form-control" asp-for="Amount"  />
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="Status">Loan Status</label>
                                                            <select class="form-control" asp-for="Status">
                                                                @foreach (var status in Enum.GetValues(typeof(CountryDemo.Data.Status)))
                                                                {
                                                                    <option value="@status">@status</option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="mt-3">
                                                            <input type="submit" class="btn btn-primary" value="Ok">
                                                            <a class="btn btn-secondary" asp-area="" asp-controller="Country" asp-action="Index">Cancel</a>
                                                        </div>
                                                    </form>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            

            @*wrap form above this!*@

        </div>
    </div>

    


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>


</body>

	








