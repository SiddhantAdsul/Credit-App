@{
}

@model List<Loan>



<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Fonts & CSS -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/fonts/all.min.css" />
	<link rel="stylesheet" href="~/css/style.css">
    <link href="~/fonts/fontawesome.css" rel="stylesheet" />
    <link href="~/fonts/fontawesome.min.css" rel="stylesheet" />


    <title>Credit App</title>
</head>

<body>

    <div class="header-top">
        <div class="headnav-top">
            <!-- menu bar -->
            <div class="navlogo">
                <div class="menubar">
                    <i class="fas fa-bars"></i>
                </div>
                <!-- Logo -->
                <a href="#" style="font-size: 20px; color: #fff;">
                    Admin Panel
                </a>
            </div>

            <div class="navbar-right">
                <div class="navbar-right-content">
                    <div class="navright">
                        <ul class="nav-right">
                            <li class="dropdown user-profile-header">
                                <div class="userimgbox" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
                                     aria-expanded="false">


                                    <img src="~/images/avatar.png" class="userimg"
                                         alt="User-Profile-Image">
                                    <span class="name">
                                        Admin
                                    </span>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="dropdown-menu dropdown-menu-right profile-notification"
                                     aria-labelledby="navbarDropdown">
                                    <button class="dropdown-item" type="submit">
                                        <i class="fas fa-sign-out-alt"></i> Log Out
                                    </button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-container">
        <div class="d-flex">
            <div class="sidemenu-wrap">
                <div class="slimScrollDiv custmscroll">
                    <div id="accordian">
                        <ul class="nav mainMenu" id="my-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="maincontent-wrap">
                <div class="maincontent-inner">

                    
                    <div class="page-header">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="page-header-title">
                                        <i class="fas fa-layer-group"></i>
                                        <div class="d-inline">
                                            <h5 class="pagetitle">Loan List</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*add the elements here to make responsive*@
                    @* need responsive here!*@
                    <div class="main-body">
                        <div class="page-wrap">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-4">
                                        <!-- Add new -->
                                        <div class="addBtn">
                                            <a asp-action="Create" class="btn btn-primary">
                                                Add
                                                new
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <form asp-action="Index" asp-controller="Country">
                                            <div class="search-box float-right">
                                                <div class="input-group">
                                                    <input name="searchString" type="search" placeholder="Search" />
                                                    <div class="input-group-append">
                                                        <button class="btn btn-secondary" type="submit">
                                                            <i class="fa fa-search"></i>
                                                        </button>
                                                    </div>

                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                    <div>
                                        <a asp-action="Index">Back to Full List</a>
                                    </div>

                                </div>



                                <!-- Listing table -->

                                <div class="card listTable">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-mob-showRow">
                                            <thead>
                                                <tr>
                                                    <th class="align-middle text-nowrap" width="30%">Loan Officer</th>
                                                    <th class="align-middle text-nowrap" width="25%">Amount</th>
                                                    <th class="align-middle text-nowrap" width="25%">Date Applied</th>
                                                    <th class="align-middle text-nowrap" width="10%">Duration</th>
                                                    <th class="align-middle text-nowrap" width="10%">Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var loan in Model)
                                                {
                                                    <tr>
                                                        <td class="align-middle text-nowrap">
                                                            @loan.Name
                                                        </td>
                                                        <td class="align-middle text-nowrap">@loan.Amount</td>
                                                        <td class="align-middle text-nowrap">@loan.DateApplied</td>
                                                        <td class="align-middle text-nowrap">@loan.Duration</td>
                                                        <td class="align-middle text-nowrap">@loan.Status</td>
                                                        <td class="align-middle text-nowrap"></td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>



                </div>
            </div>


        </div>
    </div>
    


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>


</body>





